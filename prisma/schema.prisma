// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int        @id @default(autoincrement())
  email             String     @unique
  password          String   
  firstName         String
  lastName          String
  img               String?
  inventory         Inventory?  @relation("InventoryToUser")
  eventsC            Event[]     @relation("EventsCreated")
  eventsP            Event[]     @relation("EventsParticipation")
}

model Inventory {
  id                Int              @id @default(autoincrement())
  user              User             @relation("InventoryToUser", fields:[userId] , references: [id])
  userId            Int              @unique
  foods             FoodInInventory[] 
}

model Recipes {
  id                Int              @id @default(autoincrement())
  name              String
  description       String
  img               String?  
  foods             FoodInRecipe[]    
}

model Food {
  id                Int        @id @default(autoincrement())
  name              String
  description       String
  category          String?
  barcode           String?
  img               String?  
  inventories       FoodInInventory[]
  recipes           FoodInRecipe[]
}

model FoodInInventory {
  food          Food       @relation(fields: [foodId], references: [id])
  foodId        Int
  inventory     Inventory  @relation(fields: [inventoryId], references: [id])
  inventoryId   Int
  quantity      Float      
  unit          String

  @@id([foodId, inventoryId])
}

model FoodInRecipe {
  id                Int        @id @default(autoincrement())
  food              Food       @relation(fields: [foodId], references: [id])
  foodId            Int
  recipe            Recipes    @relation(fields: [recipeId], references: [id])
  recipeId          Int
  quantity          Float  
  unit              String    
}

model Event {
  id                Int        @id @default(autoincrement())
  name              String
  description       String
  img               String?
  date              String?
  place             String?
  users             User[] @relation("EventsParticipation")
  ownerId           Int 
  owner             User  @relation("EventsCreated",fields: [ownerId], references: [id])
}

model Donation {

  id       Int     @id @default(autoincrement())
  name        String
  description String
  imagePath   String
  adress      String

}

model Location {

  id       Int     @id @default(autoincrement())
  name        String
  description String
  imagePath   String

}