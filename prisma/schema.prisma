generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  firstName String
  lastName  String
  img       String?
  inventory Inventory? @relation("InventoryToUser")
}

model Inventory {
  id     Int               @id @default(autoincrement())
  userId Int               @unique
  foods  FoodInInventory[]
  user   User              @relation("InventoryToUser", fields: [userId], references: [id])
}

model Recipes {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  img         String?
  foods       FoodInRecipe[]
}

model Food {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  img         String?
  inventories FoodInInventory[]
  recipes     FoodInRecipe[]
}

model FoodInInventory {
  id          Int       @id @default(autoincrement())
  foodId      Int
  inventoryId Int
  quantity    Float
  unit        String
  food        Food      @relation(fields: [foodId], references: [id])
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
}

model FoodInRecipe {
  id       Int     @id @default(autoincrement())
  foodId   Int
  recipeId Int
  quantity Float
  unit     String
  food     Food    @relation(fields: [foodId], references: [id])
  recipe   Recipes @relation(fields: [recipeId], references: [id])
}

model Donation {

  id       Int     @id @default(autoincrement())
  name        String
  description String
  imagePath   String
  adress      String

}

model Location {

  id       Int     @id @default(autoincrement())
  name        String
  description String
  imagePath   String

}
